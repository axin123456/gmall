<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.gmall.manage.mapper.SpuSaleAttrMapper">
    <select id="getSpuSaleAttrListBySpuId" resultMap="saleAttrList">
        SELECT
        aa.id,aa.spu_id,aa.sale_attr_id,aa.sale_attr_name,
        av.id sale_attr_value_id,av.sale_attr_value_name
        FROM
        spu_sale_attr aa join spu_sale_attr_value av
        ON aa.sale_attr_id=av.sale_attr_id
        AND aa.spu_id=av.spu_id
        WHERE aa.spu_id=#{spuId}
    </select>
    <resultMap id="saleAttrList" type="com.atguigu.bean.SpuSaleAttr">
        <result property="id" column="id"></result>
        <result property="spuId"  column="spu_id"></result>
        <result property="saleAttrId" column="sale_attr_id"></result>
        <result property="saleAttrName" column="sale_attr_name"></result>
        <collection property="spuSaleAttrValueList" ofType="com.atguigu.bean.SpuSaleAttrValue">
            <result property="id" column="sale_attr_value_id"></result>
            <result property="spuId"  column="spu_id"></result>
            <result property="saleAttrId" column="sale_attr_id"></result>
            <result property="saleAttrValueName" column="sale_attr_value_name"></result>
        </collection>
    </resultMap>
</mapper>